@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>
@{
    if (Request.IsLocal)
    {
        <h5 class="text-danger">CrotrollerName: @Model.ControllerName</h5>
        <h5 class="text-danger">ActionName: @Model.ActionName</h5>
        <h5 class="text-danger">Message: @Model.Exception.Message</h5>
    }
}
